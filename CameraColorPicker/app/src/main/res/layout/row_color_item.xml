<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="72dp"
    android:orientation="vertical">

    <View
        android:id="@+id/row_color_item_preview"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_margin="16dp"
        tools:background="@color/color_primary_dark" />

    <TextView
        android:id="@+id/row_color_item_text"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_toEndOf="@+id/row_color_item_preview"
        android:layout_toRightOf="@+id/row_color_item_preview"
        android:gravity="center_vertical"
        android:padding="16dp"
        tools:text="#FF4455"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/abc_primary_text_material_light" />


</RelativeLayout>